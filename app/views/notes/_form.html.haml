.form.sixtySection
	.inner
		= simple_form_for @note, :url => picture_notes_path do |f|
			.formHeader
				%h2 New Note
				=link_to "Cancel", @note.picture.artwork, :class => "btn btn-m btn-dark"
			.noticeBox
				- if @note.errors.any?
					%h2 Errors:
					%ul
						- @note.errors.full_messages.each do |message|
							%li= message

			%p.imageInstruction Draw an annotation onto the image using the colours provided, then write a comment to explain what improvements you think should be made to the piece!
			.formItem.formInput
				= f.label :content, "Note Content"
				= f.input :content, label: false
				= f.hidden_field :noteImgData, :id => "canvasContent"
			.formItem
				= f.submit 'Submit Note', :class => "btn btn-m btn-light btn-submit"
	