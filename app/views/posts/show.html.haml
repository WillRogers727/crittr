.titleSection
	%h1.threadTitle= @post.title
.questionSection
	%p= @post.content

.descriptionSection	
	%p= @post.cat
	- if @post.answered == true
		%p.answered Answered
	- else
		%p.unanswered Unanswered
	%p
		Tags: 
		= @post.tag_list
	- if user_signed_in?
		%div.upArrow
			= link_to "Upvote", like_post_path(@post), method: :put
			= @post.get_upvotes.size
		%div.downArrow
			= link_to "Downvote", dislike_post_path(@post), method: :put
			= @post.get_downvotes.size


/ = render partial: "comments/comments", locals: {commentable: @post}

= nested_comments @comments

= render partial: "comments/form", locals: {commentable: @post}

- if user_signed_in?
	- if current_user.id == @post.user_id
		= link_to "Edit", edit_post_path(@post)
		= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this?"}
		= link_to "Set as Answered", set_answered_post_path(@post), remote: true, method: :put 

= link_to "Home", root_path