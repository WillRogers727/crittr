.titleSection
	%h1.threadTitle= @post.title
.questionSection
	%p= @post.content

.descriptionSection
	%p
		Category:
		- if @post.category_id == nil
			Uncategorized
		- else 
			= Category.find(@post.category_id).name
			
	- if @post.completed == true
		%p.answered Answered
	- else
		%p.unanswered Unanswered
	%p
		Tags: 
		= @post.tag_list
	- if user_signed_in?
		%div.upArrow
			= link_to "Upvote", like_post_path(@post), method: :put
			= @post.get_upvotes.size
		%div.downArrow
			= link_to "Downvote", dislike_post_path(@post), method: :put
			= @post.get_downvotes.size
		- if current_user.id == @post.user_id
			= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this?"}, :class => "btn btn-m btn-dark"
			- if @post.completed != true
				= link_to "Set as Answered", set_completed_post_path(@post), remote: true, method: :put, :class => "btn btn-m btn-orange"



%h3.commentHeader Comments
= nested_comments @comments

= render partial: "comments/form", locals: {commentable: @post}

