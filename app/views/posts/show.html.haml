.titleSection.sixtySection
	%h1.threadTitle= @post.title
.questionSection.sixtySection
	%p= @post.content

.descriptionSection.sixtySection
	.descInfo.descSection
		%p
			Category:
			- if @post.category_id == nil
				Uncategorized
			- else 
				= Category.find(@post.category_id).name
		%p
			Tags: 
			= @post.tag_list

		- if @post.completed == true
			%p.answered Answered
		- else
			%p.unanswered Unanswered
	.descTop
		.descUser.descSection
			.userThumb
				=image_tag @post.user.avatar.url(:thumb), :class => "artUserThumb"
				=link_to @post.user.username, @post.user, :class => "artUserName"
		.descVoting.descSection
			.voteSection	
				.vote
					= link_to like_post_path(@post), method: :put do
						= image_tag "up.svg", :class => "arrow"
				.voteCount
					- @voteCount = (@post.get_upvotes.size) - (@post.get_downvotes.size)
					%p= @voteCount
				.vote	
					= link_to dislike_post_path(@post), method: :put do
						= image_tag "down.svg", :class => "arrow"

	.descControls.descSection
		- if current_user.id == @post.user_id
			= link_to "Delete Question", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to do this?"}, :class => "btn btn-m btn-dark"
			- if @post.completed != true
				= link_to "Set as Answered", set_completed_post_path(@post), remote: true, method: :put, :class => "btn btn-m btn-orange"



.commentToggle.sixtySection
	%h3.commentHeader Comments
	=image_tag "toggleUpDark.png", :class => "darkToggleArrow" 
.commentContent.sixtySection
	- if user_signed_in?
		.showForm
			= render partial: "comments/form", locals: {commentable: @artwork}

	= nested_comments @comments

