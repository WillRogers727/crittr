.form.sixtySection
	.inner
		= simple_form_for @post, :url => category_posts_path do |f|
			.formHeader
				%h2 New Question
				=link_to "Cancel", root_path, :class => "btn btn-m btn-dark"
			.noticeBox
				- if @post.errors.any?
					%h2 Errors:
					%ul
						- @post.errors.full_messages.each do |message|
							%li= message
			.formItem.formInput
				.labelContainer
					= f.label :title, "Post Title"
					%p.prompt.required *
				= f.input :title, label: false
			.formItem.formInput
				.labelContainer
					= f.label :content, "Post Content"
					%p.prompt.required *
				= f.input :content, label: false
			.formItem.formInput
				.labelContainer
					= f.label :tag_list, "Tags"
					%p.prompt Separated with commas
				= f.input :tag_list, label: false
			.formItem
				= f.label :category_id, "Art or Design Category"
				= f.select(:category_id, options_for_select(@categories))
			.formItem.labelItem
				%p.formLabel Does your post contain adult content?
				= f.label :nsfw,:class => "checkContainer checkContainerForm" do
					= f.check_box :nsfw
					%span.checkmark
			.formItem
				= f.submit 'Submit Post', :class => "btn btn-m btn-light btn-submit"
			
	

