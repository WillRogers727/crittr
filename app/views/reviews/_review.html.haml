.reviewContainer
	.review
		.reviewUser
			-if review.user != nil
				.commentUserPic
					=image_tag review.user.avatar.url(:thumb), :class => "commentUserThumb"
				%p
					=link_to review.user.username, review.user, :class => "commentUserName"
					posted a review:
			- else 
				%p [User Deleted]
		.reviewContent
			%p= review.content
		.reviewApproval
			%p
				Users that agree with this review: 
				= review.get_upvotes.size
		.reviewControls
			- if user_signed_in?
				- if current_user.id == review.user_id
					=link_to "Delete Review", [@artwork, review] , method: :delete, :data => { :confirm => "Are you sure?"}, :class => "btn btn-s btn-dark"
				- else
					= link_to "Approve of this Review", review_approve_path(review), method: :put, :class => "btn btn-s btn-orange"
		
		