!!!
%html
%head
  %title Crittr
  = csrf_meta_tags 
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
  %link{ "rel" => "stylesheet", href: "https://fonts.googleapis.com/css?family=Heebo:400,700", type: "text/css"}
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 

%body
  %header.topBar
    = link_to root_path, class: "logo" do 
      =image_tag "crittrLogo.png", :class => "topLogo"      
    .profileButtons
      - if user_signed_in?
        .profileMenuSection
          .dropDown
            %button.dropBtn &#x25BC
            .dropDownContent
              = link_to "User Profile", current_user
              = link_to "Messages", conversations_path
              = link_to "Sign Out", destroy_user_session_path, method: :delete  
          .profileThumb
            = image_tag current_user.avatar.url(:thumb) 
      -else
        = link_to "Sign Up", new_user_registration_path
        = link_to "Sign In", new_user_session_path

  .container    
    %p.notice= notice
    %p.alert= alert

  .postsContainer
    =yield
