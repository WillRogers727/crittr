!!!
%html
%head
  %title Crittr
  = csrf_meta_tags 
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
  %link{ "rel" => "stylesheet", href: "https://fonts.googleapis.com/css?family=Heebo:400,700", type: "text/css"}
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 

%body
  %header.topBar
    =image_tag "crittrLogo.png", :class => "topLogo"
    #buttons
      - if user_signed_in?
        
      -else
        = link_to "Sign Up", new_user_registration_path
        = link_to "Sign In", new_user_session_path
      

  %div.sideBar

  .container    
    %p.notice= notice
    %p.alert= alert

  .postsContainer
    =yield
