.sidebar
	.forumLinks
		= link_to "Artwork Forum", artworks_path, class: "fLink"
		= link_to "Questions Forum", posts_path, class: "fLink"

	.category.sideSection
		%h2.sidebarHeader Art/Design Category
		= search_form_for @search do |f|
			= f.select  :cat_matches, :collection => %w[Fine_Art Digital_Painting 3D_Model Concept_Art Drawing Graphic_Design UI_Design]
			= f.submit

	.sorting.sideSection
		%h2.sidebarHeader Sort by
		= sort_link @search, :created_at, "Date Created"
		= sort_link @search, :title, "By Title"
		= sort_link @search, :cached_votes_up, "By Upvotes"
		= sort_link @search, :cached_votes_down, "By Downvotes"
	

	
	
